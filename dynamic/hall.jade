extends frag/framework

block style
    style
        :stylus
            html,body,main,.hall
                height 100%
            .yahei
                font-family "Microsoft YaHei"!important
            .slider.fullscreen
                z-index -1
                position fixed
            .hall.row
                padding 4rem 0
                margin 0
                .col
                    height 100%
                    .rooms
                        height 100%
                        min-height 380px
                        overflow hidden
                        .card.card-search
                            input
                                display block
                                font-size 16px
                                font-weight 300
                                width 100%
                                height 36px
                                margin 0
                                padding 0 45px 0 15px
                                border 0
                                outline none
                                box-shadow: none
                                -webkit-transition: all 0.3s
                                -moz-transition: all 0.3s
                                -ms-transition: all 0.3s
                                -o-transition: all 0.3s
                                transition: all 0.3s
                            i
                                position: absolute
                                top: 5px
                                right: 10px
                                cursor: pointer;
                        .rooms-content
                            height calc(100% - 81px)!important
                            .rooms-content-scroll
                                margin 0 auto
                                height: 100%
                                overflow-y scroll
                            .col
                                padding 0.8rem
                                .upload-block
                                    position relative
                                    height 8rem
                                    width 8rem
                                    border-radius 3px
                                .upload-block
                                    > i
                                        transition 0.6s ease-out
                                        cursor pointer
                                        display none
                                    > div
                                        transition 0.6s ease-out
                                        position absolute
                                        width 100%
                                        height 1.6rem
                                        bottom 0
                                        display none
                                        background #FFFFFF
                                        opacity 0.5
                                        > div
                                            display none
                                            margin 0
                                            margin-top 0.6rem
                                .upload-block:hover
                                    > i
                                        display block
                                    > div
                                        display block
                    .user
                        min-height 16rem
                        .progress
                            margin-top 2rem
                            height 1rem
                .max-btn
                    width 100%
                    margin 0.5rem 0


block content
    main
        div.row.hall.yahei
            div.col.l5.offset-l2.m7.offset-m1.s8
                div.card-panel.white.rooms
                    div.row
                        div.col.s8
                            blockquote.yahei.grey-text 为了友♂尽！
                        div.col.s4
                            div.card.card-search
                                input(value="").yahei
                                i.material-icons search
                    div.rooms-content
                        div.rooms-content-scroll
                            div.row
                                -for(var i=0;i<25;i++)
                                    div.col
                                        div.upload-block.hoverable.grey.lighten-3
                                            i.material-icons.red-text.right highlight_off
                                            div
                                                div.progress
                                                    div.indeterminate
            div.col.l3.m3.s4
                div.card-panel.white.user
                    div.row
                        div.col.s12
                            div.row
                                div.col.s6
                                    img.circle.responsive-img(src="/static/img/default_face.jpg")
                                div.col.s6
                                    p.black-text.bold=user.nuc_base.account
                                    p.blue-text="Lv"+user.nuc_uno.level
                        div.col.s6
                            span 总局数&nbsp;&nbsp;&nbsp;
                            span.bold.blue-text=user.nuc_uno.game
                        div.col.s6
                            span 胜利&nbsp;&nbsp;&nbsp;
                            span.bold.blue-text=user.nuc_uno.win
                        div.col.s12
                            div.progress
                                div.determinate(style="width:"+user.nuc_uno.win/(user.nuc_uno.game==0?1:user.nuc_uno.game)*100+"%")
                a.waves-effect.waves-light.white-text.btn.max-btn.yahei 快速加入
                a.waves-effect.waves-light.white-text.btn.max-btn.yahei 创建房间
                a.waves-effect.waves-light.white-text.btn.max-btn.yahei 不玩啦~
        div.slider.fullscreen
            ul.slides
                each s in slides
                    li
                        img(src=s.img)

    script.
        (function () {
            $('.slider').slider({full_width: true,interval:3000,indicators:false})
        })()
